{
    "name": "just-replace-all",
    "version": "2.2.0",
    "description": "replace all occurrences of a string within a string with another string",
    "type": "module",
    "exports": {
        ".": {
            "types": "./index.d.ts",
            "require": "./index.cjs",
            "import": "./index.mjs"
        },
        "./package.json": "./package.json"
    },
    "main": "index.cjs",
    "types": "index.d.ts",
    "scripts": {
        "test": "node test.cjs",
        "build": "rollup -c",
        "test:coverage": "c8 -r json-summary node test_.cjs"
    },
    "repository": "https://github.com/angus-c/just",
    "keywords": [
        "replace",
        "all",
        "string",
        "no-dependencies",
        "just"
    ],
    "author": "Tom Wuttke",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/angus-c/just/issues"
    },
    "dependencies": {
        "mocha": "^10.2.0",
        "tape-catch": "^1.0.6"
    }
}